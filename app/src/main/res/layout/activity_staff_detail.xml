<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.githang.heyitem.staff.detail.StaffDetailActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="16dp">
            <TextView
                android:id="@+id/label_id"
                style="@style/Label"
                android:layout_marginTop="0dp"
                android:text="@string/id"/>
            <TextView
                android:id="@+id/id"
                style="@style/WrapContent"
                android:layout_alignBottom="@id/label_id"
                android:layout_toEndOf="@id/label_create_time"
                android:layout_toRightOf="@id/label_create_time"/>
            <TextView
                android:id="@+id/label_name"
                style="@style/Label"
                android:layout_below="@id/label_id"
                android:text="@string/name"/>
            <TextView
                android:id="@+id/name"
                style="@style/WrapContent"
                android:layout_alignBottom="@id/label_name"
                android:layout_toEndOf="@id/label_create_time"
                android:layout_toRightOf="@id/label_create_time"
                android:transitionName="@string/share_name"
                tools:targetApi="lollipop"/>
            <TextView
                android:id="@+id/label_mobile"
                style="@style/Label"
                android:layout_below="@id/label_name"
                android:text="@string/mobile"/>
            <TextView
                android:id="@+id/mobile"
                style="@style/WrapContent"
                android:layout_alignBottom="@id/label_mobile"
                android:layout_toEndOf="@id/label_create_time"
                android:layout_toRightOf="@id/label_create_time"
                android:transitionName="@string/share_mobile"
                tools:targetApi="lollipop"/>
            <TextView
                android:id="@+id/label_create_time"
                style="@style/Label"
                android:layout_below="@id/label_mobile"
                android:layout_marginTop="8dp"
                android:text="@string/create_time"/>
            <TextView
                android:id="@+id/create_time"
                style="@style/WrapContent"
                android:layout_alignBottom="@id/label_create_time"
                android:layout_toEndOf="@id/label_create_time"
                android:layout_toRightOf="@id/label_create_time"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
